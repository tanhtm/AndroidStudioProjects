<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgrtext"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ghi_ch_m_i"
        android:textAlignment="center"
        android:textColor="#111111"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgrtext">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/folders"
            android:padding="5dp"
            android:text="@string/th_m_c"
            android:textColor="#111111"
            android:textSize="24sp"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/buttonFolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bgrtext"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#111111"
            android:textSize="20sp" />

    </TableRow>

    <EditText
        android:id="@+id/editTextNote"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:background="#111111"
        android:drawableLeft="@drawable/pencil"
        android:ems="10"
        android:hint="@string/vi_t_ghi_ch_t_i_y"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="#fdfdfd"
        android:textSize="24sp"
        tools:ignore="RtlHardcoded" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <Button
            android:id="@+id/buttonAddNote"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/save"
            android:textAllCaps="false"
            android:textColor="#111111"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/buttonQuitNote"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/back"
            android:textAllCaps="false"
            android:textColor="#111111"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

</LinearLayout>